<section class="hero-body">
    <p class="title has-text-info-dark">
        The Tech Blog
    </p>
</section>

<div class="columns has-background-info-dark">
    <div class="column is-three-fifths is-offset-one-fifth">
        <form class="box update-form">
            <h1 class="title">Update Blog Post</h1>
            <div class="field">
                <div class="control">
                    <textarea class="textarea has-background-info has-text-light" id="title" type="text" rows="1">{{updateBlogDisplay.title}}</textarea>
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <textarea class="textarea" id="content" type="text">{{updateBlogDisplay.content}}</textarea>
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <button class="button is-info" id="update-btn" data-id="{{updateBlogDisplay.id}}" type="submit">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/js/updateBlog.js"></script>
<section class="hero-body">
    <p class="title has-text-info-dark">
        The Tech Blog
    </p>
</section>

<div class="columns has-background-info-dark">
    <div class="column is-three-fifths is-offset-one-fifth">
        <form class="box signup-form">
            <h1 class="title">Sign Up </h1>
            <div class="field">
                <label class="label">Username</label>
                <div class="control">
                    <input class="input" id="name" type="text" placeholder="Username">
                </div>
            </div>
            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" id="password" type="password" placeholder="********">
                </div>
                <p>Passwords must be between 8 and 16 characters</p>
            </div>
            <div class="field">
                <div class="control">
                    <button class="button is-success" id="signup-btn" type="submit">Sign Up</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/js/signup.js"></script>